				<value>hu.bme.estatebackend.property.form.Comfort</value>
				<value>hu.bme.estatebackend.property.form.Comment</value>
				<value>hu.bme.estatebackend.property.form.Country</value>
				<value>hu.bme.estatebackend.property.form.County</value>
				<value>hu.bme.estatebackend.property.form.Favourites</value>
				<value>hu.bme.estatebackend.property.form.Heating</value>
				<value>hu.bme.estatebackend.property.form.Notification</value>
				<value>hu.bme.estatebackend.property.form.NotificationType</value>
				<value>hu.bme.estatebackend.property.form.Offer</value>
				<value>hu.bme.estatebackend.property.form.Parking</value>
				<value>hu.bme.estatebackend.property.form.State</value>
				<value>hu.bme.estatebackend.property.form.Type</value>
				<value>hu.bme.estatebackend.property.form.User</value>
				<value>hu.bme.estatebackend.property.form.UserRoles</value>
			</list>
		</property> -->
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">${jdbc.dialect}</prop>
				<prop key="hibernate.show_sql">true</prop>
			</props>
		</property>
	</bean>

	<tx:annotation-driven transaction-manager="transactionManager" />
	<bean id="transactionManager"
		class="org.springframework.orm.hibernate4.HibernateTransactionManager">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
</beans>